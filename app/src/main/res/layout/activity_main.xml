<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_a"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="46dp">

        <FrameLayout
            android:id="@+id/framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/div_tab_bar"
            android:layout_alignParentStart="true"
            >
            <fragment
                android:id="@+id/fragment1"
                android:name="smart.app.Fragment.FragmentMap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/fg_map" />

            <fragment
                android:id="@+id/fragment2"
                android:name="smart.app.Fragment.FragmentStation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/fg_station" />

            <fragment
                android:id="@+id/fragment3"
                android:name="smart.app.Fragment.FragmentMyself"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/fg_me"/>
        </FrameLayout>
    </android.support.v4.view.ViewPager>
    <include layout="@layout/net_error"/>


    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/ly_tab_bar"
        android:background="@color/div_white" />

    <LinearLayout
        android:id="@+id/ly_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_map"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawableTop="@drawable/tab_menu_message"
            android:gravity="center"
            android:text="地图"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_station"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawableTop="@drawable/tab_menu_better"
            android:gravity="center"
            android:text="当前站点"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_myself"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawableTop="@drawable/tab_menu_setting"
            android:gravity="center"
            android:text="我"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>